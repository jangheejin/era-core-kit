{
  "name": "@kit/blocks",
  "version": "0.1.0",
  "description": "Reusable React block components for the UI and MDX rendering",
  "private": false,
  
  "main": "dist/index.js", 
  "module": "dist/index.js",
  "types": "dist/index.d.ts",

  "files": [
    "dist"
  ],

  "scripts": {
    "build": "tsc -p tsconfig.build.json"
  },

  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./registry": {
      "import": "./dist/registry.js",
      "types": "./dist/registry.d.ts"
    }
  },

  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "@kit/schema": "workspace:^"
  },
  "peerDependencies": {
    "next": "*"
  },
  "devDependencies": {
    "@types/react": "^19.2.4",
    "typescript": "^5.9.3"
  }
}