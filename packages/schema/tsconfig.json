    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "noEmit": false,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../blocks" },  // or other required sibling packages
    { "path": "../adapters/sanity" },
    { "path": "../cms-contract" },
  ]
}
