{
  "name": "era-core-kit",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm --filter site dev",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "format": "prettier --write .",
    "postinstall": "pnpm --filter @kit/blocks... --filter @kit/schema... --filter @kit/adapters-sanity... --filter @kit/search... build",
    "clean": "rm -rf apps/*/.next packages/**/dist node_modules/.cache"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^14.2.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vitest": "^1.6.0",
    "zod": "^3.23.8"
  },
  "pnpm": {
    "overrides": {
      "typescript": "5.6.2"
    }
  }
}
