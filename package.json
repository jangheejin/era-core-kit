{
  "name": "era-core-kit",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "watch": "tsc -b -w",
    "dev:all": "concurrently -n BUILD,SITE -c yellow,cyan \"pnpm run watch\" \"pnpm --filter site dev\"",
    "dev:stop": "taskkill /F /IM node.exe /T",
    "fix": "pnpm run dev:stop && pnpm run deepclean && pnpm install && pnpm run dev:all",
    "fix2": "pnpm run deepclean && pnpm install && pnpm run dev:all",
    "build": "pnpm -w run build:all",
    "build:all": "tsc -b",
    "build:check": "next build && echo 'Passed dry build!'",
    "build:preview": "vercel build && vercel deploy --prebuilt",
    "dev": "pnpm --filter site dev",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "format": "prettier --write .",
    "postinstall": "pnpm build",
    "clean:build": "rimraf --glob \"packages/**/dist\" \"packages/**/*.tsbuildinfo\"",
    "build:site": "pnpm --filter @kit/adapters-sanity... --filter @kit/blocks... --filter @kit/schema... --filter @kit/search... --filter site... run build",
    "clean": "pnpm exec rimraf packages/*/dist apps/*/dist packages/*/*.tsbuildinfo",
    "bigclean": "pnpm run clean && rimraf .turbo apps/*/.next",
    "deepclean": "npx rimraf packages/*/dist apps/*/dist packages/*/*.tsbuildinfo .turbo apps/*/.next node_modules",
    "nukeclean": "pnpm run deepclean && rimraf pnpm-lock.yaml"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "concurrently": "^8.0.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^14.2.5",
    "prettier": "^3.3.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "5.6.2",
    "vitest": "^1.6.0",
    "zod": "^3.23.8"
  },
  "pnpm": {
    "overrides": {
      "typescript": "5.6.2"
    }
  },
  "engines": {
    "node": ">=20.x"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/oswald": "^5.2.8",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
