{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".", // THIS IS LOCAL TO apps/site
    "paths": {
      "@/*": ["src/*"],
      "@kit-adapters-sanity": ["../../packages/adapters/sanity/dist"],
      "@kit/schema": ["../../packages/schema/dist"],
      "@kit/blocks": ["../../packages/blocks/dist"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
