{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
//    "outDir": "dist",

    // --- Monorepo / Type-Checking Directives (CORRECT) ---
    "composite": false,// Application package is generally NOT a composite project
    "declaration": false,// Explicitly disabling declaration and declaration map generation
    "declarationMap": false,
    "noEmit": true,// Tells tsc to only check types, not generate JS output (Next.js handles this)

    // --- Modern Next.js / React Directives ---
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true, // Mandatory for Vercel/Next.js
    "jsx": "preserve", // Mandatory for Next.js
    "plugins": [
      {
        "name": "next"
      }
    ],

    "paths": {
// path aliases need to point back to the monorepo root from this app folder.
// mirror the workspace aliases but make them relative to apps/site.
      
      "@kit/schema": ["../../packages/schema/src", "../../packages/schema/dist"],
      "@kit/blocks": ["../../packages/blocks/src", "../../packages/blocks/dist"],
      "@kit/blocks/*": ["../../packages/blocks/src/*", "../../packages/blocks/dist/*"],
      "@kit/cms-contract": ["../../packages/cms-contract/src", "../../packages/cms-contract/dist"],
      "@kit/adapters/*": ["../../packages/adapters/*/src", "../../packages/adapters/*/dist"],
      "@kit/adapters-sanity": ["../../packages/adapters/sanity/src", "../../packages/adapters/sanity/dist"],
      "@/*": ["src/*"],
      "*": ["./*", "../../packages/*"]
//      "@kit/*": ["../../packages/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src", 
    "app"
  ],
  "exclude": [
    "node_modules", "dist", "**/*.test.ts",
    "**/*.js", "**/*.mjs", "*.js", "*.mjs",
    "next.config.js", "eslint.config.mjs", "next-env.d.ts",
  ],
  "references": [// Correct and comprehensive dependency list
    { "path": "../../packages/blocks" },
    { "path": "../../packages/cms-contract" },
    { "path": "../../packages/schema" },
    { "path": "../../packages/adapters/sanity" }
  ]
}