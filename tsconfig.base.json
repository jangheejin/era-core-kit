//tsconfig.base.json
//(root tsconfig.json)
//changed "@kit/adapters/*": ["packages/adapters/*/src"], to "@kit/adapters/*": ["packages/adapters/*/src"], to
//"@kit/adapters/sanity": ["packages/adapters/sanity/src"],
{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
	  "paths": {
      "@kit/cms-contract": ["packages/cms-contract/src"],
	    "@kit/schema": ["packages/schema/src"],
      "@kit/blocks": ["packages/blocks/src"],
      "@kit/adapters/*": ["packages/adapters/*/src"],
      "@kit-adapters-sanity": ["packages/adapters/sanity/src"],
      "@/*": ["apps/site/src/*"]
	  }
  },
  "files": [],
  "references": [
    {"path": "packages/schema"},
    {"path": "packages/blocks"},
    {"path": "packages/adapters/sanity"}
  ],
  "include": ["packages", "apps"],
  "exclude": ["node_modules"]
}