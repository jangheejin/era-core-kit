//tsconfig.base.json
//(root tsconfig.json)
//changed "@kit/adapters/*": ["packages/adapters/*/src"], to "@kit/adapters/*": ["packages/adapters/*/src"], to
//"@kit/adapters/sanity": ["packages/adapters/sanity/src"],
{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@kit/schema": ["packages/schema/dist"],
      "@kit/blocks": ["packages/blocks/dist"],
      "@kit/adapters/*": ["packages/adapters/*/dist"],
      "@kit/adapters-sanity": ["packages/adapters/sanity/dist"],
      "@/*": ["apps/site/src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  }
}